name: Log Metrics
description: |
  Retrieves and logs evaluation metrics an AutoML model
inputs:
  - name: model_full_id
    description: 'The full id of the model'
    type: String

implementation:
  container:
    image: {{ image_name }}
    args: [
      log_evaluation_metrics, log_metrics,
      --model-full-id, {inputValue: model_full_id}
    ]
